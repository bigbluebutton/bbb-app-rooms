<div id="external-join" class="row">
  <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <h2><%= @scheduled_meeting.name %></h2>

    <%= form_with url: external_post_room_scheduled_meeting_path(@room, @scheduled_meeting) do |form| %>
      <div class="form-row">
        <div class="form-group col-12">
          <%= label_tag :first_name, t('default.scheduled_meeting.external.first_name') %>
          <%= text_field_tag :first_name, nil, required: true, class: "form-control", autofocus: true %>
        </div>

        <div class="form-group col-12">
          <%= label_tag :last_name, t('default.scheduled_meeting.external.last_name') %>
          <%= text_field_tag :last_name, nil, required: true, class: "form-control" %>
        </div>
      </div>

      <div class="form-actions">
        <%= submit_tag t('default.scheduled_meeting.external.join'), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
