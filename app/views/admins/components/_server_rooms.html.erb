<div class="px-24 py-12 pt-16">
    <div class="flex justify-between">
        <div class="pb-8">
            <p class="text-5xl font-sans font-light page-title"><%= t('default.admin.menu.rooms') %></p>
            <% if !notice.nil? %>
                <p id="notice" class="font-md mt-4 p-10 bg-green-200"><%= notice %></p>
            <% end %>
        </div>
    </div>
    <hr>
    <div class="pt-10">
        <table>
            <thead class="border-b">
                <tr>
                    <th class="w-1/4 whitespace-normal mb-7 uppercase text-gray-600 font-sans font-light"><%= t('default.admin.rooms.name') %></th>
                    <th class="w-1/5 mb-7 uppercase text-gray-600 font-sans font-light"><%= t("default.admin.rooms.id") %></th>
                    <th class="w-1/4 mb-7 uppercase text-gray-600 font-sans font-light"><%= t("default.admin.rooms.handler") %></th>
                    <th class="w-1/3 mb-7 uppercase text-gray-600 font-sans font-light"><%= t("default.admin.rooms.started") %></th>
                    <th class="w-1/6 mb-7 uppercase text-gray-600 font-sans font-light"></th>
                </tr>
            </thead>
            <br>
             <tbody id="rooms-table">
                <tr id="no_rooms_found" style="display: none;">
                  <td colspan="7" class="text-center h4 p-6 font-weight-normal" >
                    <%= t("default.admin.rooms.no_matched_rooms") %>
                  </td>
                </tr>
                <% if @rooms.empty? %>
                  <tr>
                    <td colspan="7" class="text-center h4 p-6 font-weight-normal">
                      <%= t("default.admin.rooms.no_rooms") %>
                    </td>
                  </tr>
                <% else %>
                    <% @rooms.each do |room| %>
                      <%= render "admins/components/room_row", room: room %>
                    <% end %>
                <% end %>
              </tbody>
        </table>
    </div>
</div>