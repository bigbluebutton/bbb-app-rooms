<div class="px-24 py-12 pt-16">
    <div class="flex justify-between">
        <div class="pb-8">
            <p class="text-5xl font-sans font-light page-title"><%= t('default.admin.menu.recordings') %></p>
            <% if !notice.nil? %>
                <p id="notice" class="font-md mt-4 p-10 bg-green-200"><%= notice %></p>
            <% end %>
        </div>
    </div>
    <hr>
    <div class="pt-10">
        <table>
            <thead class="border-b">
                <tr>
                    <th class="w-1/3 whitespace-normal mb-7 uppercase text-gray-600 font-sans font-light"><%= t('default.admin.recordings.name') %></th>
                    <th class="w-2/6 mb-7 uppercase text-gray-600 font-sans font-light"><%= t("default.recording.table.date") %></th>
                    <th class="w-1/6 mb-7 uppercase text-gray-600 font-sans font-light"><%= t("default.recording.table.duration") %></th>
                    <th class="w-1/4 mb-7 uppercase text-gray-600 font-sans font-light"><%= t('default.admin.recordings.formats') %></th>
                    <th class="w-1/6 mb-7 uppercase text-gray-600 font-sans font-light"><%=  %></th>
                </tr>
            </thead>
            <br>
             <tbody id="recording-table">
                <tr id="no_recordings_found" style="display: none;">
                  <td colspan="7" class="text-center h4 p-6 font-weight-normal" >
                    <%= t("default.recording.no_matched_recordings") %>
                  </td>
                </tr>
                <% if @recordings.empty? %>
                  <tr>
                    <td colspan="7" class="text-center h4 p-6 font-weight-normal">
                      <%= t("default.recording.no_recordings") %>
                    </td>
                  </tr>
                <% else %>
                    <% @recordings.each do |recording| %>
                      <%= render "admins/components/recording_row", recording: recording %>
                    <% end %>
                <% end %>
              </tbody>
        </table>
    </div>
</div>