<div class="px-24 py-12">
    <div class="flex justify-between">
        <div class="pb-8">
            <p class="text-5xl font-sans font-light page-title"><%= t('default.admin.menu.users') %></p>
            <% if !notice.nil? %>
            <p id="notice" class="font-md mt-4 p-10 bg-green-200"><%= notice %></p>
            <% end %>
        </div>
    </div>
    <hr>
    <div class="pt-8">
        <table>
            <thead class="border-b">
                <tr>
                    <th class="w-1/3 mb-7 uppercase text-gray-600 font-sans font-light"><%= t('default.admin.users.name') %></th>
                    <th class="w-1/3 mb-7 uppercase text-gray-600 font-sans font-light"><%= t('default.admin.users.username') %></th>
                    <th class="w-1/3 mb-7 uppercase text-gray-600 font-sans font-light"><%= t('default.admin.users.role') %></th>
                    <th class="w-1/3 mb-7 uppercase text-gray-600 font-sans font-light"><%= t('default.admin.users.options') %></th>
                </tr>
            </thead>
            <br>
            <tbody>
                <% @users.each do |user| %>
                    <%if current_user.id == user.id %>
                        <% curr_user = true %>
                    <% end %>
                    <tr>
                        <% if curr_user %>
                            <% name = user.full_name.nil? ? "Not set" : user.full_name  %>
                            <% name = name + " - you"  %>
                        <% else %>
                          <% name = user.full_name.nil? ? "Not set" : user.full_name  %>
                        <% end %>
                        <td class="pl-0 font-sans" ><%= name %></td>
                        <td class="pl-0 font-sans"><%= user.username %></td>
                        <td class="pl-0 font-sans" ><%= user.admin ? "Admin" : "User" %></td>
                        <td class="pt-4 pl-0 font-sans">
                            <% delete_modal_id = "deleteModal#{user.username}"%>
                            <% if curr_user %>
                                <button type="button" class="btn delete-btn btn-sm" disabled> <%= t('default.admin.users.delete') %> </button>
                            <% else %>
                                <button type="button" class="btn delete-btn btn-sm" data-toggle="modal" data-target="#<%=delete_modal_id%>"> <%= t('default.admin.users.delete') %> </button>
                                <div class="modal fade" id="<%=delete_modal_id%>" role="dialog">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header text-left">
                                                <h4 class="modal-title"><%= t('default.admin.confirmation') %></h4>
                                            </div>
                                            <div class="modal-body">
                                                <%=form_tag admins_delete_user_path do |form|%>
                                                    <div>
                                                        <p> <%= t('default.admin.users.delete') + " " + user.username %>? </p><br>
                                                        <%= hidden_field_tag 'username', user.username%>
                                                        <div class="btn btn-danger">
                                                            <%= submit_tag "Delete", class: "bg-transparent" %>
                                                        </div>
                                                    </div>
                                                <% end %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>