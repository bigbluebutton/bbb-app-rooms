<div id="body" class="bbbroom">

<p id="notice"><%= notice %></p>


<% if @user.admin? %>
<p>
  <%= link_to t('default.admin.showall'), rooms_path, :class => "btn btn-xs btn-default pull-right" %>
  <strong><%= t('default.admin.handler') %></strong>:&nbsp;<%= @room.handler %>
</p>
<% end %>

<br>

<%= link_to '', '#',:name => 'Refresh', :class => "btn btn-default glyphicon glyphicon-refresh pull-left", :onClick  => "location.reload();" %>

<% if @user.admin? || @user.moderator?(bigbluebutton_moderator_roles) %>
<%= link_to '', edit_room_path(@room), :name => t('default.room.edit'), :class => "btn btn-default glyphicon glyphicon-edit pull-right" %>
<% end %>

<br>
<h1><%= @room.name %></h1>

<h3><%= @room.description %></h3>

<%= button_to t('default.room.join'), meeting_join_path(@room), :class => "btn btn-primary", :type => "button", form: {target: '_blank'}  %>

<%= render "shared/sessions", recordings: recordings, only_public: false %>

</div>
