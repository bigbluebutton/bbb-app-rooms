<div id="wait-for-moderator"
     data-room-id="<%= @room.to_param %>"
     data-meeting-id="<%= @scheduled_meeting.to_param %>"
     data-join-url="<%= join_room_scheduled_meeting_path(@room, @scheduled_meeting) %>"
     data-join-method="post">

  <h2 class="item-title"><%= @scheduled_meeting.name %></h2>
  <div>
    <%= t('default.scheduled_meeting.wait.message') %>
  </div>

  <div style="display: none;">
    <%= button_to '', @post_to, method: :post, class: "btn btn-primary join-room-btn" %>
  </div>
</div>
